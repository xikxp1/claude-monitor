{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Monitor",
  "version": "0.1.0",
  "identifier": "dev.xikxp1.claude-monitor",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Claude Monitor",
        "width": 400,
        "height": 450,
        "resizable": false,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost https://claude.ai; img-src 'self' data:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
